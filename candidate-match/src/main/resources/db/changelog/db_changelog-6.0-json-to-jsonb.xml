<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Convert consultant.resume_data from JSON to JSONB to support equality operator and DISTINCT -->
    <changeSet id="20250922-01-consultant-resume-jsonb" author="agent">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="consultant"/>
            <columnExists tableName="consultant" columnName="resume_data"/>
        </preConditions>
        <sql>ALTER TABLE consultant ALTER COLUMN resume_data TYPE jsonb USING resume_data::jsonb;</sql>
    </changeSet>

</databaseChangeLog>
