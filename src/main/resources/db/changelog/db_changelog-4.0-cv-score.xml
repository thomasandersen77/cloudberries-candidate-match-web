<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20250916-01-create-cv-score" author="agent">
        <createTable tableName="cv_score">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="candidate_user_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="score_percent" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="TEXT"/>
            <column name="strengths" type="JSON"/>
            <column name="potential_improvements" type="JSON"/>
        </createTable>

        <createIndex tableName="cv_score" indexName="idx_cv_score_candidate">
            <column name="candidate_user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
