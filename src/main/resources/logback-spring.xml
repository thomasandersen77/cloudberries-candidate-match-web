<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs" />

    <!-- Base pattern without inline colors; color is applied per-level by dedicated appenders -->
    <property name="BASE_PATTERN" value="%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable"/>

    <!-- ERROR: red -->
    <appender name="CONSOLE_ERROR" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%red(%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable)</pattern>
        </encoder>
    </appender>

    <!-- WARN: orange (approximated with yellow) -->
    <appender name="CONSOLE_WARN" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%yellow(%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable)</pattern>
        </encoder>
    </appender>

    <!-- INFO: black -->
    <appender name="CONSOLE_INFO" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%black(%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable)</pattern>
        </encoder>
    </appender>

    <!-- DEBUG: dark grey (approximated with gray) -->
    <appender name="CONSOLE_DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%gray(%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable)</pattern>
        </encoder>
    </appender>

    <!-- TRACE: keep cyan as default subtle coloring -->
    <appender name="CONSOLE_TRACE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>TRACE</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%cyan(%d{ISO8601} %-5level [%t] [%X{requestId:-}] %C{1}.%M:%L: %msg%n%throwable)</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_ERROR"/>
        <appender-ref ref="CONSOLE_WARN"/>
        <appender-ref ref="CONSOLE_INFO"/>
        <appender-ref ref="CONSOLE_DEBUG"/>
        <appender-ref ref="CONSOLE_TRACE"/>
    </root>
</configuration>
